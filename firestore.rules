rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows stores to manage their store profiles.
     * @path /stores/{storeId}
     * @allow (create, update, delete) if request.auth.uid == storeId
     * @allow (get, list) if true
     * @deny (create, update, delete) if request.auth.uid != storeId
     * @principle Enforces document ownership for writes. Public read access.
     */
    match /stores/{storeId} {
      allow get, list: if true;
      allow create: if request.auth.uid == storeId && isSignedIn();
      allow update: if request.auth.uid == storeId && isSignedIn();
      allow delete: if request.auth.uid == storeId && isSignedIn();
    }

    /**
     * @description Allows stores to manage their item catalogs.
     * @path /stores/{storeId}/items/{itemId}
     * @allow (create) if request.auth.uid == request.resource.data.storeId
     * @allow (update, delete) if request.auth.uid == resource.data.storeId
     * @allow (get, list) if true
     * @deny (create, update, delete) if request.auth.uid != resource.data.storeId
     * @principle Enforces store ownership of items. Public read access.
     */
    match /stores/{storeId}/items/{itemId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.storeId && request.resource.data.storeId == storeId && isSignedIn();
      allow update: if request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.owner && isSignedIn();
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.owner && isSignedIn();
    }

    /**
     * @description Allows delivery personnel to manage their profiles.
     * @path /delivery_personnel/{deliveryPersonnelId}
     * @allow (create) if request.auth.uid == deliveryPersonnelId
     * @allow (update, delete) if request.auth.uid == deliveryPersonnelId
     * @allow (get) if true
     * @deny (create, update, delete) if request.auth.uid != deliveryPersonnelId
     * @principle Enforces document ownership for writes. Public read access.
     */
    match /delivery_personnel/{deliveryPersonnelId} {
      allow get: if true;
      allow list: if false;
      allow create: if request.auth.uid == deliveryPersonnelId && isSignedIn();
      allow update: if request.auth.uid == deliveryPersonnelId && isSignedIn();
      allow delete: if request.auth.uid == deliveryPersonnelId && isSignedIn();
    }

    /**
     * @description Manages admin role assignments. Presence of a document grants admin privileges.
     * @path /roles_admin/{uid}
     * @allow (create, delete) if isAdmin()
     * @allow (get) if isAdmin() || request.auth.uid == uid
     * @deny (list)
     * @deny (update)
     * @principle Restricts admin role management to existing admins.
     */
    match /roles_admin/{uid} {
      allow get: if isAdmin() || request.auth.uid == uid;
      allow list: if false;
      allow create: if isAdmin() && isSignedIn();
      allow update: if false;
      allow delete: if isAdmin() && isSignedIn();
    }

    /**
     * @description Allows customers to manage their profiles.
     * @path /customers/{customerId}
     * @allow (create) if request.auth.uid == customerId
     * @allow (update, delete) if request.auth.uid == customerId
     * @allow (get) if request.auth.uid == customerId
     * @deny (list)
     * @deny (create, update, delete) if request.auth.uid != customerId
     * @principle Enforces document ownership for writes.
     */
    match /customers/{customerId} {
      allow get: if request.auth.uid == customerId && isSignedIn();
      allow list: if false;
      allow create: if request.auth.uid == customerId && isSignedIn();
      allow update: if request.auth.uid == customerId && isSignedIn();
      allow delete: if request.auth.uid == customerId && isSignedIn();
    }

    /**
     * @description Allows customers to manage their orders.
     * @path /customers/{customerId}/orders/{orderId}
     * @allow (create) if request.auth.uid == customerId
     * @allow (update, delete) if request.auth.uid == customerId
     * @allow (get, list) if request.auth.uid == customerId
     * @deny (create, update, delete) if request.auth.uid != customerId
     * @principle Enforces document ownership for writes.
     */
    match /customers/{customerId}/orders/{orderId} {
      allow get, list: if request.auth.uid == customerId && isSignedIn();
      allow create: if request.auth.uid == customerId && isSignedIn();
      allow update: if request.auth.uid == get(/databases/$(database)/documents/customers/$(customerId)).data.uid && get(/databases/$(database)/documents/customers/$(customerId)).data.uid == customerId && isSignedIn();
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/customers/$(customerId)).data.uid && get(/databases/$(database)/documents/customers/$(customerId)).data.uid == customerId && isSignedIn();
    }

    /**
     * @description Allows management of items within an order.
     * @path /customers/{customerId}/orders/{orderId}/order_items/{orderItemId}
     * @allow (create, update, delete) if request.auth.uid == customerId
     * @allow (get, list) if request.auth.uid == customerId
     * @deny (create, update, delete) if request.auth.uid != customerId
     * @principle Enforces document ownership for writes.
     */
    match /customers/{customerId}/orders/{orderId}/order_items/{orderItemId} {
      allow get, list: if request.auth.uid == customerId && isSignedIn();
      allow create: if request.auth.uid == customerId && isSignedIn();
      allow update: if request.auth.uid == get(/databases/$(database)/documents/customers/$(customerId)).data.uid && get(/databases/$(database)/documents/customers/$(customerId)).data.uid == customerId && isSignedIn();
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/customers/$(customerId)).data.uid && get(/databases/$(database)/documents/customers/$(customerId)).data.uid == customerId && isSignedIn();
    }

    /**
     * @description Allows customers to leave reviews for delivery personnel.
     * @path /delivery_personnel/{deliveryPersonnelId}/reviews/{reviewId}
     * @allow (create) if request.auth.uid == request.resource.data.customerId
     * @allow (update, delete) if request.auth.uid == resource.data.customerId
     * @allow (get, list) if true
     * @deny (create, update, delete) if request.auth.uid != resource.data.customerId
     * @principle Enforces customer ownership of reviews. Public read access.
     */
    match /delivery_personnel/{deliveryPersonnelId}/reviews/{reviewId} {
      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.customerId && isSignedIn();
      allow update: if request.auth.uid == get(/databases/$(database)/documents/delivery_personnel/$(deliveryPersonnelId)).data.customerId && isSignedIn();
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/delivery_personnel/$(deliveryPersonnelId)).data.customerId && isSignedIn();
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}