rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read store information, but restricts writes.
     * @path /stores/{storeId}
     * @allow (get, list): Any user can read store information.
     * @allow (create, update, delete): Only an admin can manage store information (TODO: add owner role).
     * @deny (create, update, delete): Non-admins cannot create, update, or delete store information.
     * @principle Public read, restricted write access with potential for future owner role.
     */
    match /stores/{storeId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows admins to manage items and stores to create items for themselves.
     * @path /stores/{storeId}/items/{itemId}
     * @allow (get, list): Only the parent store can list or get items, or an admin.
     * @allow (create): Only an admin or store itself can create an item.
     * @allow (update, delete): Only the store itself or an admin can update or delete the item.
     * @deny (create, update, delete): Others cannot manage store items.
     * @principle Enforces store ownership for item management.
     */
    match /stores/{storeId}/items/{itemId} {
      allow get, list: if isStore(storeId) || isAdmin();
      allow create: if isStore(storeId) || isAdmin();
      allow update, delete: if isStore(storeId) || isAdmin();
    }

    /**
     * @description Allows admins to manage delivery personnel accounts.
     * @path /delivery_personnel/{deliveryPersonnelId}
     * @allow (get, list): Only admins can list or get personnel accounts.
     * @allow (create, update, delete): Only admins can manage delivery personnel accounts.
     * @deny (create, update, delete): Non-admins cannot manage delivery personnel accounts.
     * @principle Admin-only access for delivery personnel management.
     */
    match /delivery_personnel/{deliveryPersonnelId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Manages admin role assignments.
     * @path /roles_admin/{uid}
     * @allow (get, list): No one can list admin roles.
     * @allow (create): Only the user themselves can create the role (self-assignment).
     * @allow (update, delete): Only admins can modify admin roles.
     * @deny (create, update, delete): Others cannot manage admin roles.
     * @principle Admin role management with self-assignment.
     */
    match /roles_admin/{uid} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update, delete: if isAdmin();
    }

    /**
     * @description Allows customers to manage their own accounts.
     * @path /customers/{customerId}
     * @allow (get, list): Only the customer themselves or admins can list or get their own accounts.
     * @allow (create): Allows self-creation of customer accounts.
     * @allow (update, delete): Only the customer themselves or admins can update or delete their own accounts.
     * @deny (create, update, delete): Others cannot manage customer accounts.
     * @principle Customer ownership for account management.
     */
    match /customers/{customerId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == customerId;
      allow update, delete: if (isOwner(customerId) || isAdmin());
    }

    /**
     * @description Allows customers and admins to manage their orders.
     * @path /customers/{customerId}/orders/{orderId}
     * @allow (get, list): Only the customer themselves, the store placing the order, delivery personel assigned, or admins can access the orders.
     * @allow (create): Only the customer themselves or admins can create orders.
     * @allow (update, delete): Only the customer themselves, the store placing the order, delivery personel assigned, or admins can update or delete orders.
     * @deny (create, update, delete): Others cannot manage orders.
     * @principle Customer ownership for order management.
     */
    match /customers/{customerId}/orders/{orderId} {
      allow get, list: if isOwner(customerId) || isAdmin();
      allow create: if isOwner(customerId) || isAdmin();
      allow update, delete: if isOwner(customerId) || isAdmin();
    }

    /**
     * @description Allows customers and admins to manage their order items.
     * @path /customers/{customerId}/orders/{orderId}/order_items/{orderItemId}
     * @allow (get, list): Only the customer themselves or admins can access the items.
     * @allow (create): Only the customer themselves or admins can create items.
     * @allow (update, delete): Only the customer themselves or admins can update or delete items.
     * @deny (create, update, delete): Others cannot manage order items.
     * @principle Customer ownership for order item management.
     */
    match /customers/{customerId}/orders/{orderId}/order_items/{orderItemId} {
      allow get, list: if isOwner(customerId) || isAdmin();
      allow create: if isOwner(customerId) || isAdmin();
      allow update, delete: if isOwner(customerId) || isAdmin();
    }

    /**
     * @description Allows admins and the delivery personnel to manage reviews about them.
     * @path /delivery_personnel/{deliveryPersonnelId}/reviews/{reviewId}
     * @allow (get, list): Only the delivery personnel themselves or admins can access the reviews.
     * @allow (create): Only the customer themselves or admins can create reviews.
     * @allow (update, delete): Only the delivery personnel themselves or admins can update or delete reviews.
     * @deny (create, update, delete): Others cannot manage delivery personnel reviews.
     * @principle Delivery personnel and admin access for review management.
     */
    match /delivery_personnel/{deliveryPersonnelId}/reviews/{reviewId} {
      allow get, list: if isDeliveryPersonnel(deliveryPersonnelId) || isAdmin();
      allow create: if isSignedIn(); // Any signed-in user can create a review.
      allow update, delete: if isDeliveryPersonnel(deliveryPersonnelId) || isAdmin();
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDeliveryPersonnel(deliveryPersonnelId) {
        return isSignedIn() && request.auth.uid == deliveryPersonnelId;
    }

    function isStore(storeId) {
        return isSignedIn() && request.auth.uid == storeId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}