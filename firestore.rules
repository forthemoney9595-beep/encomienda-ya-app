rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA (HELPERS) ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    function isStoreOwner(storeId) {
      return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }

    // --- REGLAS DE COLECCIONES ---

    // 1. CONFIGURACI√ìN GLOBAL (Mantenido de tu versi√≥n anterior)
    match /config/{configDoc} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // 2. ROLES ADMIN
    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // 3. USUARIOS Y PERFILES
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow read, update: if isAdmin() || isOwner(userId);
      allow delete: if isAdmin();

      // Mantenemos tu subcolecci√≥n de Favoritos
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // 4. TIENDAS (Stores)
    match /stores/{storeId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.ownerId);
      allow update: if isAdmin() || (isSignedIn() && isOwner(resource.data.ownerId));
      allow delete: if isAdmin();

      // Subcolecci√≥n PRODUCTOS (Soportamos 'products' y 'items' por compatibilidad)
      match /products/{productId} {
        allow read: if true;
        allow write: if isAdmin() || isStoreOwner(storeId);
      }
      match /items/{itemId} {
        allow read: if true;
        allow write: if isAdmin() || isStoreOwner(storeId);
      }
    }

    // 5. PEDIDOS (Orders) - üõ°Ô∏è BLINDAJE FASE 4 üõ°Ô∏è
    match /orders/{orderId} {
      // ‚ùå CREATE: BLOQUEADO (Ahora usamos la API Segura en el Backend)
      // Nota: El chequeo de 'Mantenimiento' ahora debe hacerse en la API, no aqu√≠.
      allow create: if false; 

      // üëÅÔ∏è READ: Solo involucrados
      allow read, list: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||           // Cliente
        isStoreOwner(resource.data.storeId) ||                // Tienda
        resource.data.deliveryPersonId == request.auth.uid || // Repartidor
        isAdmin() ||                                          // Admin
        // Repartidores buscando pedidos libres
        (resource.data.status == 'En preparaci√≥n' && resource.data.deliveryPersonId == null) 
      );

      // ‚úèÔ∏è UPDATE: Solo acciones permitidas
      allow update: if isSignedIn() && (
        isAdmin() ||
        isStoreOwner(resource.data.storeId) ||
        resource.data.deliveryPersonId == request.auth.uid ||
        // Auto-asignaci√≥n de repartidor
        (resource.data.deliveryPersonId == null && request.resource.data.deliveryPersonId == request.auth.uid)
      );
    }

    // 6. NOTIFICACIONES
    match /notifications/{notifId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if false; // El sistema las crea, no el usuario
    }

    // 7. CHATS
    match /order_chats/{orderId}/messages/{msgId} {
      allow read, create: if isSignedIn();
    }
  }
}