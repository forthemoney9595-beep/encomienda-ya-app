
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // DEBUGGING RULE: This is insecure.
    // Allows any authenticated user to read and write to all collections.
    // This is to test if rules are being deployed at all.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
