rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Allow read access to roles_admin for any authenticated user
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /{document=**} {
      // Admins can read and write anything
      allow read, write: if isAdmin();
    }
    
    // Fallback rules for non-admins
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    match /stores/{storeId} {
      allow read: if true;
      allow update: if request.auth.uid == resource.data.ownerId;
    }
    
    match /orders/{orderId} {
        allow read, update: if request.auth.uid == resource.data.userId || request.auth.uid == resource.data.deliveryPersonId;
        allow create: if request.auth.uid != null;
    }

    match /roles_admin/{uid} {
      allow read: if request.auth != null;
    }
  }
}
